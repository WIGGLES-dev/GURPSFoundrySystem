{
    "awesomeTypescriptLoaderOptions": {
        "forceIsolatedModules": true,
        "reportFiles": [
            "node_modules/**/*.{ts,tsx}"
        ]
    },
    "include": [
        "src/**/*",
        "src/node_modules",
        "types",
    ],
    "exclude": [
        "node_modules/*",
        "__sapper__/*",
        "public/*",
        "**/*.spec.ts",
    ],
    "compilerOptions": {
        "skipLibCheck": true,
        "importsNotUsedAsValues": "preserve",
        "module": "commonjs",
        "esModuleInterop": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "baseUrl": "./src",
        "paths": {
            "@modules/*": [
                "modules/*"
            ],
            "@components/*": [
                "svelte/*"
            ],
            "@GURPSFoundry/*": [
                "foundry-GURPS/*"
            ]
        },
        "lib": [
            "webworker",
            "scripthost",
            "ESNext",
            "DOM"
        ],
        "types": [
            "node",
            "foundry-pc-types",
            "svelte",
            "copy-webpack-plugin",
        ],
        "target": "ES2015"
    }
}